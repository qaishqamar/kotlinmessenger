<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".RegistrationActivity">

    <Button
        android:id="@+id/SelectImage_button_register"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:text="Select Image"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/round_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/select_circleImageView_register"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="@+id/SelectImage_button_register"
        app:layout_constraintStart_toStartOf="@+id/SelectImage_button_register"
        app:layout_constraintTop_toTopOf="@+id/SelectImage_button_register" />

    <EditText
        android:id="@+id/userName_et_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext_reg_log"
        android:ems="10"
        android:hint="User name"
        android:inputType="textPersonName"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/SelectImage_button_register"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SelectImage_button_register"
        app:layout_constraintTop_toBottomOf="@+id/SelectImage_button_register" />

    <EditText
        android:id="@+id/email_et_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_reg_log"
        android:ems="10"
        android:hint="Email"
        android:padding="15dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/userName_et_register"
        app:layout_constraintStart_toStartOf="@+id/userName_et_register"
        app:layout_constraintTop_toBottomOf="@+id/userName_et_register" />

    <EditText
        android:id="@+id/password_et_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_reg_log"
        android:ems="10"
        android:hint="Password"
        android:padding="15dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_et_register"
        app:layout_constraintStart_toStartOf="@+id/email_et_register"
        app:layout_constraintTop_toBottomOf="@+id/email_et_register" />

    <Button
        android:id="@+id/register_bt_rester"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Register"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@+id/password_et_register"
        app:layout_constraintStart_toStartOf="@+id/password_et_register"
        app:layout_constraintTop_toBottomOf="@+id/password_et_register" />

    <TextView
        android:id="@+id/alredy_have_acount_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Already have an account"
        android:textColor="#FDFBFB"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/register_bt_rester"
        app:layout_constraintStart_toStartOf="@+id/register_bt_rester"
        app:layout_constraintTop_toBottomOf="@+id/register_bt_rester" />



</androidx.constraintlayout.widget.ConstraintLayout>